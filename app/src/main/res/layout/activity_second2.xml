<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity"
    android:background="#414144">

    <ImageView
        android:id="@+id/cloud"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="120dp"
        android:src="@drawable/cloud"
        />

    <TextView
        android:id="@+id/temp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/cloud"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:text="40"
        android:textSize="100sp"
        android:textColor="#ffffff"/>


    <TextView
        android:id="@+id/unit"
        android:layout_below="@+id/temp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="90dp"
        android:layout_toEndOf="@id/cloud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â°C"
        android:textSize="40sp"
        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/city"
        android:layout_below="@+id/cloud"
        android:layout_marginEnd="40dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jaipur"
        android:textSize="40sp"
        android:textColor="#ffffff"/>


    <RelativeLayout
        android:id="@+id/sec1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/city"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/weather1"
            android:textColor="#ffffff"

            android:layout_marginStart="60sp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="5dp"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="Weather"
            android:textSize="12sp"
            android:background="@drawable/custom_button"/>

        <TextView
            android:id="@+id/humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:text="Cloud"
            android:layout_marginEnd="100dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"

            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sec2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/sec1"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/weather2"
            android:textColor="#ffffff"

            android:layout_marginStart="60sp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="5dp"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="Humidity"
            android:textSize="12sp"
            android:background="@drawable/custom_button"/>

        <TextView
            android:id="@+id/pressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:text="30"
            android:layout_marginEnd="100dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"

            />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/sec3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/sec2"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/weather3"
            android:textColor="#ffffff"

            android:layout_marginStart="60sp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="5dp"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="Pressure"
            android:textSize="12sp"
            android:background="@drawable/custom_button"/>

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:text="40p"
            android:layout_marginEnd="100dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"

            />
    </RelativeLayout>



</RelativeLayout>